<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="107dp"
                android:layout_height="103dp"
                android:layout_marginTop="88dp"
                app:srcCompat="@color/colorAccent" />

            <EditText
                android:id="@+id/edtcontrol"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/edtnocontrol"
                android:inputType="number"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtnip"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_marginTop="40dp"
                android:ems="10"
                android:hint="@string/edtnip"
                android:inputType="numberPassword"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnIniciar"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:onClick="enviarrecycler"
                android:layout_marginTop="40dp"
                android:text="@string/btniniciarsesion" />

            <Button
                android:id="@+id/btnregistro"
                android:layout_width="253dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:onClick="enviaralregistro"
                android:text="@string/btnregistro" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>